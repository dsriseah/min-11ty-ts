{
  "include": ["11ty-extend/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules", "_site"],
  "compilerOptions": {
    "module": "commonjs", // output module system
    "moduleResolution": "node", // how to find modules
    "target": "es2020", // output code generation
    //
    "typeRoots": ["./node_modules/@types", "11ty-extend/types"], // where .d.ts files live
    "baseUrl": "11ty-extend", // where to look for imports
    "paths": {
      // import alias roots
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  }
}
